<%- include('header.ejs') %>
<div class="container p-5">
  <h2 class="introsignup">Vous voulez modifier une info relative à un skin en vente ? Vous êtes au bon endroit!</h2>
  <form action="/annonce/update" method="post">
    <input type="hidden" value="<%= user.idannonce %>" name="idannonce">
    <div class="infosignup">
        <label for="name" class="nomdescases">Marque:</label>
        <input type="text" class="form-control" id="marque" placeholder="Marque de la voiture" value="<%= user.marque %>" name="marque" required aria-label="Marque de la voiture" autofocus>
    </div>    
    <div class="infosignup">
        <label for="name" class="nomdescases">Modele:</label>
        <input type="text" class="form-control" id="modele" placeholder="Modele de la voiture" value="<%= user.modele %>" name="modele" required aria-label="Modele de la voiture" autofocus>
    </div>   
    <div class="infosignup">
        <label for="name" class="nomdescases">Année de fabrication:</label>
        <input type="text" class="form-control" id="annee" placeholder="Année de fabrication" value="<%= user.annee %>" name="annee" required aria-label="Année de fabrication" autofocus>
    </div>   
    <div class="login">
        <button type="submit" class="btn btn-primary">Envoyer</button>
    </div>
</div>
</form>
</div>
</br></br></br></br></br>
